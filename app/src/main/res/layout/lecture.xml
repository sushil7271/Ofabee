<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    
    
    <RelativeLayout
        android:id="@+id/lecture_header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="#1abc9c"
     >
     
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow" />
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:text="Course Name"
            android:textColor="#ffffff"
            />
		
		<ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/menu" />
		
      </RelativeLayout>

   
    
    <RelativeLayout
        android:id="@+id/lecture_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lecture_header"
    >

        
		 <ImageView 
		     android:id="@+id/video"
            android:layout_width="match_parent"
        android:layout_height="200dp" 
        android:background="@drawable/videoplay"
        android:layout_gravity="center"
            />
		 
		 <RelativeLayout 
		     android:id="@+id/lecture_content"
		     android:layout_width="match_parent"
        	 android:layout_height="wrap_content"
        	  android:layout_below="@+id/video"
        	  
		     >

		 		 <TextView 
		     android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:padding="10dp"
        	 android:textSize="15dp"
        	 android:text="Lecture 22 : Department of Electronics and information Technology has launched"
		     />
		 </RelativeLayout>
		 
		 <Button 
		    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/lecture_content"
    		android:text="Lecture Material"
		     />
		 
        </RelativeLayout>
        
     <RelativeLayout
        android:id="@+id/lecture_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/lecture_video"
     >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="-.5dp"
            >
        </ListView>

        </RelativeLayout>     
    
      
   
    

</RelativeLayout>
